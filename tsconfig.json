{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "inlineSources": true,
        "target": "ES2015",
        "module": "commonjs",
        "newLine": "LF",
        "outDir": "www",
        "declaration": true,
        "declarationDir": "types"
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "types",
        "ionic-native"
    ]
}
